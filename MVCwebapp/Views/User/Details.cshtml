@model List<MVCWebApp.Models.UserEntry>
@{
    ViewData["Title"] = "User Details";
}

<h2 class="text-center mb-4">Users List</h2>

<div class="container">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>
                        <button class="btn btn-info" onclick="showLocation(this, '@user.Location')">Show Location</button>
                        <span class="location" style="display:none;">@user.Location</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="/User/Create" class="btn btn-primary">Add New User</a>
    </div>
</div>

<script>
    function showLocation(button, location) {
        // Hide the button
        button.style.display = "none";

        // Show the location text
        const locationSpan = button.nextElementSibling;
        locationSpan.style.display = "inline";
        locationSpan.textContent = location;
    }
</script>
