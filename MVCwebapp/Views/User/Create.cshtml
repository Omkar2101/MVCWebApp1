@model MVCWebApp.Models.UserEntry
@{
    ViewData["Title"] = "User Form";
}

<h2 class="text-center mt-4">Fill Your Details</h2>

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Name:</label>
                <input asp-for="Name" class="form-control" placeholder="Enter your name" required />
            </div>

            <div class="mb-3">
                <label asp-for="Location" class="form-label fw-bold">Location:</label>
                <input asp-for="Location" class="form-control" placeholder="Enter your location" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success px-4">Submit</button>
            </div>
        </form>
    </div>

    <div class="text-center mt-3">
        <a href="/User/Details" class="btn btn-primary">View All Users</a>
    </div>
</div>

<style>
    .container {
        max-width: 500px;
    }

    .card {
        border-radius: 10px;
        border: none;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn {
        border-radius: 8px;
        font-weight: bold;
    }
</style>
