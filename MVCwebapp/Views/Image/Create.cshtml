@{
    ViewData["Title"] = "Upload Image";
}

<h2 class="text-center mt-4">Upload Image</h2>

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label fw-bold">Select Image:</label>
                <input type="file" name="file" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Enter Text:</label>
                <input type="text" name="text" class="form-control" placeholder="Enter description..." required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-4">Upload</button>
            </div>
        </form>
    </div>
</div>

<style>
    .container {
        max-width: 500px;
    }

    .card {
        border-radius: 10px;
        border: none;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn {
        border-radius: 8px;
        font-weight: bold;
    }
</style>
